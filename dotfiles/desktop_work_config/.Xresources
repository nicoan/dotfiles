! === Font ===

!*font:          xft:Source Code Pro for Powerline:size=11,style=regular

URxvt.font:     xft:Ubuntu Mono derivative Powerline:size=11:antialias=true
URxvt.boldFont: xft:Ubuntu Mono derivative Powerline:bold:size=11:antialias=true

! === Colours ===

!! Colorscheme

! special
*.foreground: #93a1a1
*.background: #141c21
*.cursorColor: #afbfbf

! black
*.color0: #263640
*.color8: #4a697d

! red
*.color1: #d12f2c
*.color9: #fa3935

! green
*.color2: #819400
*.color10: #a4bd00

! yellow
*.color3: #b08500
*.color11: #d9a400

! blue
*.color4: #2587cc
*.color12: #2ca2f5

! magenta
*.color5: #696ebf
*.color13: #8086e8

! cyan
*.color6: #289c93
*.color14: #33c5ba

! white
*.color7: #bfbaac
*.color15: #fdf6e3

! ------------------------------------------------------------------------------
! --- end of terminal colors section -------------------------------------------
! ------------------------------------------------------------------------------

!! Common Keybinds for Navigations
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard

! === URxvt ===

! Looks
URxvt*font:                     xft:Ubuntu Mono:size=12,style=regular
URxvt*scrollBar:                false
URxvt.internalBorder:           10
! Clickable urls
URxvt.url-select.underline:     true
URxvt.url-launcher:             /usr/bin/firefox
URxvt.matcher.button:           1
! Change keybinding for copy/paste
URxvt*iso14755:                 false
! URxvt.letterSpace:              -1
URxvt.lineSpace:                2
URxvt*cursorUnderline:      false
URxvt*cursorBlink:          true

! True trasparency
urxvt*depth: 32
!urxvt*background: rgba:0000/0000/0000/cccc
urxvt*background: rgba:1400/1c00/2100/eeee
